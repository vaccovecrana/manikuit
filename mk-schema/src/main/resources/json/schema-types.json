{
  "cryptoCurrency": {
    "id": "cryptoCurrency",
    "description": "A crypto currency type.",
    "type": "string",
    "enum": ["btc", "ltc", "eth", "unknown"]
  },
  "cryptoAddress": {
    "id": "cryptoAddress",
    "description": "A crypto currency address.",
    "type": "string",
    "minLength": 32, "maxLength": 128
  },
  "txConfirmationCount": {
    "id": "txConfirmationCount",
    "description": "a non-negative confirmation count.",
    "type": "integer",
    "minimum": 0
  },
  "paymentStatus": {
    "id": "paymentStatus",
    "description": "A transaction payment status.",
    "type": "string",
    "enum": ["pending", "complete"],
    "default": "pending"
  },
  "txHash": {
    "id": "txHash",
    "description": "A transaction hash.",
    "type": "string",
    "minLength": 24, "maxLength": 128
  },
  "encodedAmount": {
    "id": "encodedAmount",
    "description": "Implementation specific string encoding for crypto currency payment amounts.\\nRead: amounts must be represented as the crypto currency implementation would, instead of as how the user would see them \\n(i.e. BTC -> satoshi, ETH -> wei)",
    "type": "string",
    "maxLenght": 64
  }
}